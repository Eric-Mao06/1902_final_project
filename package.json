{
  "name": "linkd",
  "version": "1.0.0",
  "scripts": {
    "start": "cd backend && uvicorn src.api:app --host 0.0.0.0 --port $PORT",
    "start-frontend": "cd linkd && npm start",
    "start-backend": "cd backend && uvicorn src.api:app --reload --port 8000",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
